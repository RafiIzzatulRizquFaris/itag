<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_itag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:contentDescription="@string/itag"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/itag_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_forget"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"
            android:contentDescription="@string/forget"
            android:onClick="onForget"
            android:src="@drawable/minus" />
    </LinearLayout>
</LinearLayout>